{
  "manifest_version": 2,
  "name": "My Extension",
  "version": "1.0",
  "browser_specific_settings": {
    "gecko": {
      "id": "my-extension@mozilla.org",
      "strict_min_version": "109.0"
    }
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["popup.js"]
  }
}